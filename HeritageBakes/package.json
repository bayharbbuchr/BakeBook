{
  "name": "bakebook-backend",
  "version": "1.0.0",
  "description": "Backend for BakeBook application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch server/index.ts",
    "build": "rimraf dist && tsc --project tsconfig.json && esbuild server/index.ts --platform=node --bundle --outfile=dist/index.js --packages=external --format=esm --sourcemap",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "esbuild": "^0.19.11",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
